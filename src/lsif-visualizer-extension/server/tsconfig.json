{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "out",
		"rootDir": "src",
		"lib": ["es6"],
		"strict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
